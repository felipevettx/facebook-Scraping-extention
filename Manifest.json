{
  "manifest_version": 3,
  "name": "vettx-extension",
  "version": "1.0",
  "description": "ok",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "declarativeContent",
    "webRequest",
    "webNavigation",
    "webRequest",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
