{
  "manifest_version": 2,
  "name": "Facebook Marketplace Car Scraper",
  "version": "1.3",
  "description": "Extrae datos de autos del Facebook Marketplace",
  "permissions": [
    "activeTab",
    "storage",
    "https://www.facebook.com/marketplace/*",
    "downloads"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/marketplace/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}

